<!DOCTYPE html>
<html lang="jp">

<head>

  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <meta name="author" content="">

  <title>ますみすサーチ</title>

  <!-- Bootstrap core CSS -->
  <link href="/static/bootstrap/css/bootstrap.min.css" rel="stylesheet">
  <link href="/static/css/scrolling-nav.css" rel="stylesheet">
  <!-- Bootstrap core JavaScript -->
  <script src="/static/jquery/jquery.min.js"></script>
  <script src="/static/bootstrap/js/bootstrap.bundle.min.js"></script>

  <!-- Plugin JavaScript -->
  <script src="/static/jquery-easing/jquery.easing.min.js"></script>
</head>

<body id="page-top">
  <div class="footerFixed">
  <!-- Footer -->
  <%- include('../_header'); %>

  <header class="bg-secondary text-white">
    <div class="container text-center">
      <h1>ますみすサーチ</h1>
      <p class="lead"><%= msg %></p>
    </div>
  </header>

  <section id="search_section">
    <div class="container">
      <form action="/ui/search" method="GET">
          <div class="d-flex align-items-center form-group">
            <input type="text" class="form-control" id="q" name="q" aria-describedby="検索文字列を入力" placeholder="検索文字列を入力" size="80" value="<%= query %>">
          </div>
          <div class="d-flex align-items-center form-group text-center">
            <div class="col-12">
              <input type="submit" value="検索" class="btn btn-dark" />
            </div>
          </div>
      </form>
    </div>
  </section>

  <section id="search_result">
    <div class="container">
      <div class="row">
        <div class="col-lg-12 mx-auto">
          <h2>検索結果一覧</h2>

          <div class="table-responsive">
            <table id="instance-table" class="table table-striped table-sm" style="width: 100%">
              <thead>
                <tr>
                  <th>発言者</th>
                  <th>発言内容</th>
                  <th>投稿日時</th>
                </tr>
              </thead>
              <tbody>
                <% for (var row of rows) { %>
                  <% var m = (Moment(row['note_created_at'])); %>
                  <% m.utcOffset('+09:00') %>
                  <tr>
                    <td><a href="<%= row['account_id']? row['account_id'] : row['account_url'] %>" target="_blank"><%= row['display_name'] != "" ? row['display_name'] : "(空の名前です)"  %></a></td>
                    <td><a href="<%= row['url'] %>" target="_blank"><%- row['note'] != "" ? escapeHTML(row['note']).replace(/\n/g,'<br>') : "(空の発言です)" %></a></td>
                    <td><%= m.format('YYYY-MM-DD HH:mm:ss') %> JST</td>
                  </tr>
                <% } %>
              </tbody>
            </table>
          </div>

        </div>
      </div>
    </div>
  </section>

  <!-- Footer -->
  <%- include('../_footer'); %>
</div>
</body>

</html>